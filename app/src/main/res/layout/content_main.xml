<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/app_bar_main"
                tools:context=".MainActivity">

    <Button
        android:layout_margin="10dp"
        android:id="@+id/main_btn_to_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecycleView示例"
        android:background="#772222ff"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/main_btn_to_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volley示例"
        android:background="#772222ff"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/main_btn_to_JsBridge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JS交互"
        android:background="#772222ff"/>

    <Button
    android:layout_margin="10dp"
    android:id="@+id/main_btn_to_randomLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="随机长度布局"
    android:background="#772222ff"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/main_btn_to_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画"
        android:background="#772222ff"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/main_btn_to_dialogFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="对话框Fragment"
        android:background="#772222ff"/>
</LinearLayout>
