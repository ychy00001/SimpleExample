<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--**************start! 自定义白天 夜间主题***********-->
    <!--application主题-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--application主题设置透明背景  需要每个Activity都有自己的背景定义-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <item name="ThemeBackgroundColor">@color/defaultBackground_light</item>
        <item name="ThemeTextColor">@color/defaultTextColor_light</item>
    </style>


    <style name="AppTheme.Light" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/defaultBackground_light</item>

        <item name="ThemeBackgroundColor">@color/defaultBackground_light</item>
        <item name="ThemeTextColor">@color/defaultTextColor_light</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/defaultBackground_dark</item>

        <item name="ThemeBackgroundColor">@color/defaultBackground_dark</item>
        <item name="ThemeTextColor">@color/defaultTextColor_dark</item>
    </style>

    <!--**************end! 自定义白天 夜间主题***********-->
</resources>
